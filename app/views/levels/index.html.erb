<p id="notice"><%= notice %></p>

<h2 style="font-weight: bold;">Levels:</h2><br>
<% if admin_signed_in? %>
   <%= link_to 'Add Level', new_program_level_path,class: 'btn btn-success' %> |
<% end%>
<%= link_to 'Back',programs_path,class: 'btn btn-success' %>
<table class = 'table table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @levels.each do |level| %>
      <tr>
        <td style="font-weight: bold;"><%=link_to level.name,level_attachments_path(level)%></td>
        <td style="font-weight: bold;"><%= level.duration %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Add Attachment', new_level_attachment_path(level),class: 'btn btn-success' %></td>
          <td><%= link_to 'Edit', edit_program_level_path(level.program,level),class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy',[level.program,level], method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


